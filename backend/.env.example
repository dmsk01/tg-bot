# Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/postcard_bot

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app/webhook/telegram
MINI_APP_URL=http://localhost:5173

# Redis
REDIS_URL=redis://localhost:6379

# Replicate API (Flux models) - https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# Kandinsky API (FusionBrain) - legacy, disabled by default
KANDINSKY_API_KEY=
KANDINSKY_SECRET_KEY=
KANDINSKY_API_URL=https://api-key.fusionbrain.ai/

# YooKassa - подключить позже
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
YOOKASSA_RETURN_URL=

# Storage
UPLOAD_DIR=./uploads
GENERATED_DIR=./generated
MAX_FILE_SIZE=10485760

# Costs (USD)
GENERATION_COST=0.04

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Admin Panel
ADMIN_JWT_SECRET=your_admin_jwt_secret_different_from_main
ADMIN_JWT_ACCESS_EXPIRES=15m
ADMIN_JWT_REFRESH_EXPIRES=7d
ADMIN_CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=info
